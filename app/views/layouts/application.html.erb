<!DOCTYPE html>
<html>
  <head>
    <title>Hitch-a-Ride</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
 <script src="https://maps.google.com/maps/api/js?key=AIzaSyD5geRY3vDQzzCdSI90M3EjH_3uauAJmhU&callback=initMap" 
          type="text/javascript"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= cloudinary_js_config %>
  </head>

  <body>
    <div class="nav-bar">
        <nav>
            <%= link_to 'Home', root_path %>
            <%= link_to 'Find-A-Trip', trips_path %> 
            <%= link_to 'Search', search_path %>
            <% if @current_user.present?%>
                <%= link_to 'Profile', @current_user %>
                <%= link_to 'Bookings', passenger_path  %>
                <%= link_to 'Post-a-Ride', new_trip_path %>
                <%= link_to 'Log Out', login_path, :method => 'delete' %>
            <% else %>
                <%= link_to 'Sign Up', new_user_path %>
                <%= link_to 'Log In', login_path %>
            <% end %>
        </nav>
    </div>
    <div class="container">

        <%= yield %>
    </div>

     

  </body>
</html>
