<div class="sign">

<h1>Sign In to Hitch-a-Ride</h1>

<%= form_tag login_path do %>
    <ul>
        <li>
            <%= label_tag :email %>
            <%= email_field_tag :email %>           
        </li>
        <li>
            <%= label_tag :password %>
            <%= password_field_tag :password %>        
        </li>
        <li>
            <%= submit_tag "Log In" %>    
        </li>
    </ul>
<% end %>
</div>