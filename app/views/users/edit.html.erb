<h1>Edit Profile</h1>

<form action= user_path method="post">
    <ul>
        <li>First Name:
            <input name="first_name" value="<%= @user.first_name %>">
        </li>
        <li>Last Name:
            <input name="last_name" value="<%= @user.last_name %>">
        </li>
        <li> Email Address:
            <input name="email" value="<%= @user.email %>">
        </li>
        <li>Profile Image:
            <input type="url" name="image" value="<%= @user.image %>">
        </li>
        <li> New Password:
            <input name="password" value="<%= @user.password %>">
        </li>
        <li> Password Confirmation:
            <input name="password_confirmation" value="<%= @user.password_confirmation %>">
        </li>
    </ul>
    <button>Update Profile</button>

</form>


