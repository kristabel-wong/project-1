<h1 class="new-trip">All Users - <%= @users.count %> </h1>

<div class="admin-page">

    <div class="user-index-heading">
        <p>User ID</p>
        <p>First Name</p>
        <p>Last Name</p>
        <p>Email</p>
        <p>Delete User </p>
    </div>

    <% @users.order(:id).each do |user| %>
        <div class="user-index">
            <p><%= user.id %></p>
            <p><%= user.first_name %></p>
            <p><%= user.last_name %></p>
            <p><%= user.email %> </p>
            <p><% if user.admin == false %> <%= link_to '❌', user_path(user.id), :method => 'delete', data: { :confirm => "Are you sure you want to delete this user?"} %> 
                <% elsif user.admin == true %> <span title="Administrator"> 🔑 </span>
                <% end %></p>
        </div>
    <% end %>


</div>
