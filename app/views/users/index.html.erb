<h1 class="new-trip">All Users</h1>

<div class="admin-page">

    <div class="user-index-heading">
        <p>First Name</p>
        <p>Last Name</p>
        <p>Email</p>
        <p>Delete User </p>
    </div>

<% @users.each do |user| %>
    <div class="user-index">
        <p><%= user.first_name %></p>
        <p><%= user.last_name %></p>
        <p><%= user.email %></p>
        <p><%= link_to '❌', user_path(user.id), :method => 'delete', data: { :confirm => "Are you sure you want to delete this user?"} %></p>
    </div>
<% end %>


</div>
