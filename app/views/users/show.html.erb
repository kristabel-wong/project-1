                                <div class="bookings">
                                    <h3 class="show-bookings"> <%= booking.trip.origin %> to <%= booking.trip.destination %> - <%= booking.trip.date.strftime '%A, %B %e' %> at <%= booking.trip.time.strftime '%l:%M %p' %> </h3>
                                    <%= booking.user.first_name %> 
                                </div>
                            <% end%>
                        <% end%>
                    <% end %>
                <% end%>
        



